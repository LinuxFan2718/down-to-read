{
  "manifest_version": 2,
  "name": "Down To Read",
  "version": "1.0",
  "description": "Virtual Bookshelf of Your Kindle Library.",
  "icons": {
    "128": "icon_16.png",
    "128": "icon_32.png",
    "128": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background_script.js"]
  },
  "permissions": ["https://read.amazon.com/", "activeTab"],
  "browser_action": {
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  }
}